{
  "assistant": { "enabled": false, "version": "2" },
  "auto_install_extensions": {
    "fish": true,
    "git-firefly": true,
    "kotlin": true,
    "make": true,
    "nix": true,
    "ruff": true,
    "scheme": true,
    "toml": true,
    "typst": true,
    "verilog": true,
    "wgsl": true,
    "wit": true,
    "xcode-themes": true
  },
  "buffer_font_size": 14,
  "features": { "inline_completion_provider": "none" },
  "languages": {
    "Git Commit": { "wrap_guides": [72] },
    "Haskell": { "tab_size": 2 },
    "Markdown": { "format_on_save": "on", "soft_wrap": "editor_width" },
    "Nix": { "language_servers": ["!nil", "..."], "tab_size": 2 },
    "Python": { "formatter": { "language_server": { "name": "ruff" } } },
    "Typst": { "soft_wrap": "editor_width" },
    "Verilog": { "tab_size": 2 }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": { "command": "clippy" },
        "imports": { "granularity": { "group": "module" } }
      }
    },
    "tinymist": { "initialization_options": { "formatterMode": "typstyle" } }
  },
  "terminal": {
    "alternate_scroll": "on",
    "detect_venv": "off",
    "dock": "bottom"
  },
  "theme": {
    "dark": "Xcode Default Darker",
    "light": "One Light",
    "mode": "system"
  }
}
